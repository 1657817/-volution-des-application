<UserControl x:Class="DataGrid.UC_MODSUP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataGrid"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Modification ou suppression d'un étudiant" FontWeight="Bold"/>
        <ComboBox Grid.Row="1" Margin="100, 10, 100, 10"/>
        <TextBox Grid.Row="2" Margin="100, 10, 100, 10"/>
        <TextBox Grid.Row="3" Margin="100, 10, 100, 10"/>
        <TextBox Grid.Row="4" Margin="100, 10, 100, 10"/>
    </Grid>
</UserControl>
