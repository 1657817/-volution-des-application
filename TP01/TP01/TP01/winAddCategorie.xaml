<Window x:Class="TP01.winAddCategorie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP01"
        mc:Ignorable="d"
        Title="winAddCategorie" Height="225" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Ajouter une catégorie" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Nom de la catégorie : " Margin="0, 0, 10, 0"/>
            <TextBox Name="txbxCatAjouter" Width="150" Margin="10, 0, 0, 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Name="btnAjout" Content="Ajouter la catégorie" Margin="0, 0, 10, 0" Click="btnAjout_Click"/>
            <Button Name="btnQuitter" Content="Quitter" Margin="10, 0, 10, 0" Click="btnQuitter_Click"/>
        </StackPanel>
    </Grid>
</Window>
